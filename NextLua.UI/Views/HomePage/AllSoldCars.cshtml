@model NextLua.UI.Models.HomePage.HomePageVM

@{
    ViewData["Title"] = "AllSoldCars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Satılan Arabalar</h2>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
        <tr>
            <th>Araba Model</th> 
            <th>Renk</th> 
            <th>Fiyat</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br />
    @* <a class="btn btn-primary" href="~/Hospital/Add" role="button">Hastane Ekle</a> *@
    @* <a class="btn btn-danger" href="~/UserManagement/Index" role="button">Geri Dön</a> *@
</div>

@*@await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")*@

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json',
                },
            });
        });
 </script>
}