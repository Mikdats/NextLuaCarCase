@model NextLua.Entities.DTOs.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6" id="register-div">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <a style="color: black"><b> <i class="bi bi-person-circle"></i> Kayıt Ekranı</b></a>
            </div>
            <div class="form-group">
                <label>İsim</label>
                <input asp-for="Username" class="form-control" style="color:black"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>E-Posta</label>
                <input asp-for="Email" class="form-control" style="color:black" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input asp-for="Password" class="form-control" style="color:black" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label>Şifre Tekrarı</label> *@
            @*     <input asp-for="PasswordRepeat" class="form-control" style="color:black" /> *@
            @*     <span asp-validation-for="PasswordRepeat" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <br />
                <input type="submit" value="Kayıt Ol" class="btn btn-success" />
                <input type="reset" value="Sil" class="btn btn-danger" />
            </div>
        </form>
    </div>
    <div class="col-3"> </div>
</div>
